<html>
    <head>
        <link href='https://fonts.googleapis.com/css?family=Comfortaa' rel='stylesheet'>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" >
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" ></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js" integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT" crossorigin="anonymous"></script>
        <style>
            .flex-container1
            {
                display: flex;
                align-items: center;
                justify-content: center;
                flex-direction:column;
                width: 100%;
                min-height: 100%;
                background-color: #f3d4ff;
            }
            .flex-container1 > div, .flex-container2 > div, .top-container > div
            {
                font-family: 'Comfortaa', sans-serif;
            }
            .flex-container2
            {
                display: flex;
                align-items: center;
                justify-content: center;
                width: 100%;
                min-height: 100%;
                background-color: #f3d4ff;
            }
            .top-container
            {
                display: flex;
                align-items: center;
                justify-content: flex-end;
                padding: 5px;
                background-color: rgb(178, 176, 247);
                width: 100%;
                min-height: 100px;
            }
            .main-center
            {
                display: flex;
                align-items: center;
                justify-content: center;
                flex-direction:column;
                padding: 5px;
                border-style: solid;
                border-radius: 15px;
                border-width: "2px";
                border-color: rgba(128, 125, 240, 0.60);
                width: 373px;
            }
            .error
            {
                text-align: center;
                border-radius: 7px;
                background-color: rgba(255, 104, 104, 0.5);
                margin: 7px;
            }
            .hyperlink:link, .hyperlink:active, .hyperlink:visited, .hyperlink:hover
            {
                font-family: 'Comfortaa', sans-serif;
                font-size: medium;
                margin: 15px;
                text-decoration: none;
                color: black;
            }
        </style>
    </head>
    <body>
        <div class="top-container">
            <a class="hyperlink" href="/">Home</a>
            <a class="hyperlink" href="/about">About</a>
            <div class="dropdown">
                <a href="#" class="d-block link-dark text-decoration-none dropdown-toggle" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false"><%= locals.name %></a>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                    <li>
                        <a class="dropdown-item" href="/profile">Profile</a>
                    </li>
                    <li>
                        <form method="post" action="/logout">
                            <a class="dropdown-item" onclick="this.parentNode.submit()">Logout</a>
                        </form>
                    </li>
                </ul>
            </div> 
        </div>
        <div class="flex-container1">   
            <div class="main-center" style="margin: 5px;">
                <div style="font-size: 36px">Profile</div>
                <div class="flex-container2">
                    <div><b>Full Name </b></div>
                    <div style="margin-left: 5px;"><%=locals.name%></div>
                </div>
                <div class="flex-container2">
                    <div><b>Email </b></div>
                    <div style="margin-left: 5px;"><%=locals.user.email%></div>
                </div>
                <div class="flex-container2">
                    <div><b>Date of Birth </b></div>
                    <div style="margin-left: 5px;"><%=locals.user.dob.toLocaleDateString()%></div>
                </div>
                <div class="flex-container2">
                    <div><b>Gender </b></div>
                    <div style="margin-left: 5px;"><%=locals.user.gender%></div>
                </div>
                <div class="flex-container2">
                    <a href="/profile/edit" style="margin: 15px;" class="btn btn-primary">Edit Profile</a>
                    <a href="/profile/password" style="margin: 15px;" class="btn btn-primary">Edit Password</a>
                </div>
            </div>
        </div>
    </body>
</html>
