<html>
    <head>
        <link href='https://fonts.googleapis.com/css?family=Comfortaa' rel='stylesheet'>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <style>
            .flex-container1
            {
                display: flex;
                align-items: center;
                justify-content: center;
                width: 100%;
                min-height: 100%;
                background-color: #f3d4ff;
            }
            .flex-container1 > div
            {
                font-family: 'Comfortaa', sans-serif;
            }
            .main-center
            {
                display: flex;
                align-items: center;
                justify-content: center;
                padding: 5px;
                border-style: solid;
                border-radius: 15px;
                border-width: "2px";
                border-color: rgba(128, 125, 240, 0.60);
                width: 373px;
            }
            .error
            {
                text-align: center;
                border-radius: 7px;
                background-color: rgba(255, 104, 104, 0.5);
                margin: 7px;
            }
        </style>
    </head>
    <body>
        <div class="flex-container1">
            <div class="main-center">
                <form method="post" action="/login">
                    <div style="font-size: large; margin: 7px; text-align: center;">Login Here</div>
                    <% if (locals.error) { %>
                        <div class="error"><%= error %></div>
                    <% } %>
                    <div class="form-floating" style="margin: 7px; font-size: small;">
                        <input type="email" class="form-control" id="floatingEmail" placeholder="placeholder" name="email">
                        <label for="floatingEmail">Email Address</label>
                    </div>
                    <div class="form-floating" style="margin: 7px; font-size: small;">
                        <input type="password" class="form-control" id="floatingPassword" placeholder="placeholder" name="password">
                        <label for="floatingPassword">Password</label>
                    </div>
                    <div style="margin: 7px;">Don't have an account yet?
                        <a href="/register">Register here!</a>
                    </div>
                    <div>
                        <button class="w-100 btn btn-md btn-primary" style="background-color: 8C62EB; border-color: 9B4ED4; margin: 5px; max-width: 95%;" type="submit">Login</button>
                    </div>
                </form>
            </div>
            </main>
        </div>
    </body>
</html>
