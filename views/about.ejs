<html>
    <head>
        <link href='https://fonts.googleapis.com/css?family=Comfortaa' rel='stylesheet'>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" >
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" ></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js" integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT" crossorigin="anonymous"></script>
       <style>
            .flex-container1
            {
                display: flex;
                align-items: flex-start;
                justify-content: flex-start;
                flex-direction: column;
                flex-wrap: wrap;
                width: 100%;
                min-height: 100%;
                background-color: #f3d4ff;
            }
            .flex-container2
            {
                display: flex;
                align-items: center;
                justify-content: center;
                width: 100%;
                height: 100%;
                background-color: #f3d4ff;
            }
            .flex-container1 > div, .flex-container2 > div
            {
                font-family: 'Comfortaa', sans-serif;
            }
            .top-container
            {
                display: flex;
                align-items: center;
                justify-content: flex-end;
                padding: 5px;
                background-color: rgb(178, 176, 247);
                width: 100%;
                min-height: 100px;
            }
            .hyperlink:link, .hyperlink:active, .hyperlink:visited, .hyperlink:hover
            {
                font-family: 'Comfortaa', sans-serif;
                font-size: medium;
                margin: 15px;
                text-decoration: none;
                color: black;
            }
            .main-center
            {
                display: flex;
                align-items: center;
                justify-content: center;
                flex-direction: column;
                padding: 5px;
                border-style: solid;
                border-radius: 15px;
                border-width: "2px";
                border-color: rgba(128, 125, 240, 0.60);
                width: 373px;
            }
        </style>
    </head>
    <body>
        <div class="flex-container1">
            <div class="top-container">
                <a class="hyperlink" href="/">Home</a>
                <a class="hyperlink" href="/about">About</a>
                <% if (!isLoggedIn) { %>
                    <a class="hyperlink" href="/login">Login</a>
                <% } else { %>
                    <div class="dropdown">
                        <a href="#" class="d-block link-dark text-decoration-none dropdown-toggle" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false"><%= locals.name %></a>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                            <li>
                                <a class="dropdown-item" href="/profile">Profile</a>
                            </li>
                            <li>
                                <form method="post" action="/logout">
                                    <a class="dropdown-item" onclick="this.parentNode.submit()">Logout</a>
                                </form>
                            </li>
                        </ul>
                    </div> 
                <% } %> 
            </div>
            <div class="flex-container2" style="margin: 100px 0px 0px;">
                <div class="main-center">
                    <img src="https://avatars.githubusercontent.com/u/85059743?s=400&u=dd490f231ead827bb7935c663fdd02cfe3e24619&v=4" style="width:128px;height:128px;">
                    <div>Andrew</div>
                    <div>X IPA 3</div>
                    <div>No. Absen 3</div>
                </div>
            </div>
        </div>
    </body>
</html>
